<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="157dp"
        >

        <TextView
            android:id="@+id/nameOfMachine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="TextView" />


        <TextView
            android:id="@+id/numberOfMachine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/plusMachine"
            android:layout_alignBottom="@+id/plusMachine"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:text="        " />

        <Button
            android:id="@+id/plusMachine"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/nameOfMachine"
            android:layout_marginLeft="50dp"
            android:onClick="plusMachine"
            android:text="+" />

        <TextView
            android:id="@+id/costOfMachine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/plusMachine"
            android:layout_alignBottom="@+id/plusMachine"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="        " />


        <TextView
            android:id="@+id/numberOfWokersOnMach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/minusWorkerOnMach"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:text="            " />

        <Button
            android:id="@+id/plusWorkerOnMach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/plusMachine"
            android:layout_marginLeft="50dp"
            android:onClick="plusWorkerOnMach"
            android:text="+" />

        <Button
            android:id="@+id/minusWorkerOnMach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/plusWorkerOnMach"
            android:layout_alignStart="@+id/plusWorkerOnMach"
            android:layout_below="@+id/plusWorkerOnMach"
            android:onClick="minusWorkerOnMach"
            android:text="-" />


        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/plusWorkerOnMach"
            android:layout_alignBottom="@+id/plusWorkerOnMach"
            android:layout_alignLeft="@+id/costOfMachine"
            android:layout_alignStart="@+id/costOfMachine"
            android:text="Time:     " />

        <TextView
            android:id="@+id/materialMake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/minusWorkerOnMach"
            android:layout_alignBottom="@+id/minusWorkerOnMach"
            android:layout_alignLeft="@+id/timer"
            android:layout_alignStart="@+id/timer"
            android:text="Make:         " />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/nameOfMachine"
            android:layout_toLeftOf="@+id/costOfMachine"
            android:layout_toStartOf="@+id/costOfMachine"
            app:srcCompat="@drawable/ui_coin" />

    </RelativeLayout>

</FrameLayout>