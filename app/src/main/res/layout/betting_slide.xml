<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="338dp"
                android:layout_marginTop="30dp"
                android:background="@color/warm_black">

                <Button
                    android:id="@+id/buttonConfirmForFyftyFyfty"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_alignBaseline="@+id/editTextFyftyToFyfty"
                    android:layout_alignBottom="@+id/editTextFyftyToFyfty"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/pearl_aqua"
                    android:text="CONFIRM" />

                <Button
                    android:id="@+id/buttonForConfirmShufl"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/editTextShufle"
                    android:background="@color/pearl_aqua"
                    android:text="CONFIRM" />

                <EditText
                    android:id="@+id/editTextShufle"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textViewForShufl"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/buttonForConfirmShufl"
                    android:layout_toStartOf="@+id/buttonForConfirmShufl"
                    android:ems="10"
                    android:inputType="number"
                    android:text="100" />

                <EditText
                    android:id="@+id/editTextFyftyToFyfty"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textViewForFyftyToFyfty"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/buttonConfirmForFyftyFyfty"
                    android:layout_toStartOf="@+id/buttonConfirmForFyftyFyfty"
                    android:ems="10"
                    android:inputType="number"
                    android:text="100" />


                <TextView
                    android:id="@+id/textViewForFyftyToFyfty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/playFyftyToFyfty"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:text="Your bet is here"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/playAd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/border_red"
                    android:text="Play Ad For coins"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />"/>

                <Button
                    android:id="@+id/playFirstMiniGame"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/buttonConfirmForFyftyFyfty"
                    android:layout_marginTop="10dp"
                    android:background="@color/border_red"
                    android:enabled="true"
                    android:text="Play shufl"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

                <Button
                    android:id="@+id/playFyftyToFyfty"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/playAd"
                    android:layout_marginTop="12dp"
                    android:background="@color/border_red"
                    android:enabled="true"
                    android:text="play 50/50"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />



                <TextView
                    android:id="@+id/textViewForShufl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/playFirstMiniGame"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:text="Your bet is here"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp" />


            </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:layout_weight="0.43">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BETTING TAB"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/decription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:text="DESVCISKFJAFAJFJAJHFJAHSJFHAJFHSJFHAJSAJSHFJAHFJASFJAJFJASJFASSSSSSSSSSasfasfasfafafsas"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
</LinearLayout>